@model IEnumerable<LibraryManagement.Models.Borrower>

@{
    ViewBag.Title = "Index";
}

<h2>Borrower's At Glance</h2>
<p>Be Careful To Whom You are Allowing to Borrow</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BorrowerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Book.BookName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Occupation)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.BorrowerName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Book.BookName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Occupation)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Phone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.BorrowerId }) |
        @Html.ActionLink("Details", "Details", new { id = item.BorrowerId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.BorrowerId })
    </td>
</tr>
}

</table>
